<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting">
<LinearLayout
    android:id="@+id/pagecolor"
    android:background="@drawable/albumlobby"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="25dp"
        android:layout_marginBottom="25dp"
        android:textColor="#1C00DB"
        android:text="@string/to_reset_all_albums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginBottom="45dp"
        android:background="@drawable/albumstyle"
        android:id="@+id/reset"
        android:textColor="#1C00DB"
        android:text="@string/reset_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginBottom="25dp"
        android:textSize="25dp"
        android:textColor="#1C00DB"
        android:text="@string/choose_the_app_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/blu"
            android:onClick="changeBackground"
            android:tag="1"
            android:text="@string/theme_1"
            android:textColor="#1C00DB" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/pinki"
            android:onClick="changeBackground"
            android:tag="2"
            android:text="@string/theme_2"
            android:textColor="#1C00DB" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/pur"
            android:onClick="changeBackground"
            android:tag="3"
            android:text="@string/theme_3"
            android:textColor="#1C00DB" />
    </LinearLayout>
    <Button
        android:layout_marginTop="55dp"
        android:background="@drawable/albumstyle"
        android:id="@+id/back"
        android:textColor="#1C00DB"
        android:text="@string/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
</android.support.constraint.ConstraintLayout>